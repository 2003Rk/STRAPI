{
  "kind": "collectionType",
  "collectionName": "learning_contents",
  "info": {
    "singularName": "learning-content",
    "pluralName": "learning-contents",
    "displayName": "Learning Content",
    "description": "Learning content for the real estate platform"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "string",
      "required": false
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "tags": {
      "type": "json",
      "required": false
    }
  }
}
