{
  "kind": "collectionType",
  "collectionName": "checklist_items",
  "info": {
    "singularName": "checklist-item",
    "pluralName": "checklist-items",
    "displayName": "Checklist Item",
    "description": "Checklist items that users can complete to earn points"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "points": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "information_gathering",
        "property_viewing", 
        "property_research",
        "contract_process",
        "handover_process"
      ],
      "default": "information_gathering"
    },
    "phase": {
      "type": "string"
    },
    "itemId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "isCompleted": {
      "type": "boolean",
      "default": false
    },
    "completedBy": {
      "type": "string"
    },
    "completedAt": {
      "type": "datetime"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    },
    "rewardThreshold": {
      "type": "integer",
      "default": 5
    },
    "rewardAmount": {
      "type": "integer",
      "default": 1000
    }
  }
}
